<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="UserInterface"
        android:textSize="25dp"
        android:textColor="@android:color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttom1"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="1"/>
        <Button
            android:layout_toRightOf="@+id/buttom1"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttom2"
            android:text="2"/>
        
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/buttom3"/>
        <Button
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_toRightOf="@id/buttom3"
            android:id="@+id/buttom4"/>
        <Button
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_toRightOf="@id/buttom4"
            android:id="@+id/buttom5"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttom6"
            android:text="6"/>
        <Button
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buttom6"
            android:id="@+id/buttom7"
            android:text="7"/>
        <Button
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buttom7"
            android:id="@+id/buttom8"
            android:text="8"/>
        <Button
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buttom8"
            android:id="@+id/buttom9"
            android:text="9"/>
    </RelativeLayout>

</LinearLayout>